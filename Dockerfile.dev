# Development Dockerfile with uv and hot-reload support
FROM python:3.12-slim

# Labels (OCI)
LABEL org.opencontainers.image.title="syslog-fwd-dev"
LABEL org.opencontainers.image.description="Development image for syslog-fwd"

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

# Copy project files
COPY pyproject.toml .
COPY src/ src/

# Install in development mode
RUN uv sync --dev

# Expose ports
EXPOSE 514/udp
EXPOSE 514/tcp
EXPOSE 9090/tcp

# Default command
CMD ["uv", "run", "syslog-fwd", "run", "-c", "config.yaml"]
